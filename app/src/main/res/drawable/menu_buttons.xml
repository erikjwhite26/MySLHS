<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffc8c8c8" />
            <stroke
                android:width="1dp"
                android:color="#FF9B9B9B" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffc8c8c8"
                android:endColor="#FF9B9B9B"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF9B9B9B" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>