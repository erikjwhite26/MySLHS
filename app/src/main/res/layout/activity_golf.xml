<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thewhites.myslhs.Baseball"
    android:background="#ff000000">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shorelandLogo"
        android:layout_alignParentTop="true"
        android:src="@drawable/shoreland_logo"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:clickable="false"
        android:contentDescription="@string/shoreland_logo"
        android:focusable="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/subStatement"
        android:id="@+id/subStatement"
        android:textColor="#ff000000"
        android:background="#ffffb800"
        android:textSize="10pt"
        android:textStyle="bold|italic"
        android:layout_below="@+id/shorelandLogo"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/subStatement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/golf_backround"
        android:id="@+id/golfStandardLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:id="@+id/golfNewsLabel"
            android:layout_alignLeft="@+id/golfNews"
            android:layout_alignRight="@+id/golfNews"
            android:gravity="center_horizontal"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/golfNews" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/golfNews"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:src="@drawable/golf_icon"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:background="#00ffffff"
            android:baselineAlignBottom="false"
            android:layout_alignParentBottom="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roster"
            android:id="@+id/golfRosterLabel"
            android:layout_below="@+id/golfRoster"
            android:layout_alignLeft="@+id/golfRoster"
            android:layout_alignRight="@+id/golfRoster"
            android:gravity="center_horizontal"
            android:textSize="12pt"
            android:textColor="#ffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/golfRoster"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:src="@drawable/golf_icon"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:background="#00ffffff"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:baselineAlignBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:id="@+id/golfCalendarLabel"
            android:layout_alignLeft="@+id/golfCalendar"
            android:layout_alignRight="@+id/golfCalendar"
            android:gravity="center_horizontal"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/golfCalendar"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:src="@drawable/golf_icon"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="false"
            android:layout_marginRight="20dp"
            android:background="#00ffffff"
            android:baselineAlignBottom="false"
            android:layout_alignParentBottom="false"
            android:layout_above="@+id/golfCalendarLabel"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/subStatement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/golf_backround"
        android:id="@+id/golfRosterLayout"
        android:focusable="false"
        android:visibility="invisible">

        <WebView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/webView4" />
    </RelativeLayout>

</RelativeLayout>
