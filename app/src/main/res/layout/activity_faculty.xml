    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="69dp"
            android:id="@+id/shorelandFacultyLogo"
            android:src="@drawable/shoreland_faculty_title"
            android:background="#ffffff"
            android:clickable="true"
            android:contentDescription="@string/shoreland_logo"
            android:focusable="false"
            android:longClickable="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/subStatement"
            android:id="@+id/subStatement"
            android:textColor="#ff000000"
            android:background="#ffffb800"
            android:textSize="10pt"
            android:textStyle="bold|italic"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/shorelandFacultyLogo"
            android:gravity="center_horizontal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_below="@+id/subStatement" />
    </RelativeLayout>