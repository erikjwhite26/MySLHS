<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thewhites.myslhs.Settings"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:background="#ff000000">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soundLayout"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/soundIcon"
            android:src="@drawable/sound"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:id="@+id/soundTitle"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:textIsSelectable="true"
            android:singleLine="false"
            android:textSize="10pt"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/soundIcon"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/soundUnderline"
            android:layout_below="@+id/soundIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="#ffffff" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soundUnderline"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioGroupS">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Sounds"
                android:id="@+id/enableSounds"
                android:textSize="8pt"
                android:textColor="#ffffff"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute Sounds"
                android:id="@+id/muteSounds"
                android:textSize="8pt"
                android:textColor="#ffffff" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notificationLayout"
        android:layout_below="@+id/soundLayout"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/notification"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:id="@+id/notificationTitle"
            android:textIsSelectable="true"
            android:singleLine="false"
            android:textSize="10pt"
            android:autoText="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/notificationUnderline"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:textColor="#ffffff" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationUnderline"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioGroupN">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable  Notifications"
                android:id="@+id/enableNotifications"
                android:textSize="8pt"
                android:textColor="#ffffff"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute Notifications"
                android:id="@+id/muteNotifications"
                android:textSize="8pt"
                android:textColor="#ffffff" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/otherLayout"
        android:layout_below="@+id/notificationLayout"
        android:paddingBottom="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/otherIcon"
            android:src="@drawable/other"
            android:layout_marginBottom="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:id="@+id/otherTitle"
            android:textIsSelectable="true"
            android:singleLine="false"
            android:textSize="10pt"
            android:autoText="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/otherIcon"
            android:layout_toEndOf="@+id/otherIcon"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/otherUnderline"
            android:layout_below="@+id/otherIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:textColor="#ffffff" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otherUnderline"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioGroupO"
            android:focusableInTouchMode="false">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Original Edition"
                android:id="@+id/showOriginalEdition"
                android:textSize="8pt"
                android:textColor="#ffffff"
                android:checked="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Teacher Edition"
                android:id="@+id/showTeacherEdition"
                android:textSize="8pt"
                android:textColor="#ffffff"
                android:checked="false" />
        </RadioGroup>
    </RelativeLayout>

</RelativeLayout>
